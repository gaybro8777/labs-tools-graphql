{
  "name": "wikimedia/tptools",
  "description": "PHP tools by User:Tpt",
  "autoload": {
    "psr-4": {
      "Tptools\\": "src/"
    }
  },
  "require": {
    "addwiki/mediawiki-api": "~0.6",
    "addwiki/wikibase-api": "~0.7",
    "data-values/data-values": "~1.0",
    "data-values/common": "~0.4.1",
    "data-values/geo": "~2.1",
    "data-values/number": "~0.9",
    "data-values/time": "~0.8",
    "linclark/microdata-php": "~2.0"
  },
  "require-dev": {
    "mediawiki/mediawiki-codesniffer": "14.1.0",
    "mediawiki/minus-x": "0.2.1"
  },
  "scripts": {
    "test": [
      "phpcs -p -s",
      "minus-x check ."
    ],
    "fix": [
      "phpcbf",
      "minus-x fix ."
    ]
  }
}